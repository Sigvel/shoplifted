{
  "name": "shoplifted",
  "version": "0.0.5",
  "description": "Auction website for everything.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tailwindcss -i ./src/scss/style.css -o ./dist/style.css --watch",
    "format": "npx prettier --write",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sigvel/shoplifted.git"
  },
  "keywords": [
    "Auction",
    "Website",
    "buy",
    "sell"
  ],
  "author": "Tony",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sigvel/shoplifted/issues"
  },
  "homepage": "https://github.com/Sigvel/shoplifted#readme",
  "dependencies": {
    "daisyui": "^2.41.0",
    "tailwindcss": "^3.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "eslint": "^8.28.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "prettier-plugin-tailwindcss": "^0.2.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
}
